<!-- Results Container -->
    <div id="results" class="row">
        <% if (typeof breweries !== 'undefined' && breweries) { %>
            <% breweries.forEach(brewery => { %>
                <div class="col-sm-4">
                    <div class="card" style="background-color: #9B3922;">
                        <div class="brewery card-body">
                            <h3 class="card-title"><%= brewery.name %></h3>
                            <p class="card-text"><%= brewery.street %></p>
                            <p class="card-text"><%= brewery.city %>, <%= brewery.state %> <%= brewery.postal_code %></p>
                            <p class="card-text"><%= brewery.phone %></p>
                            <a href="<%= brewery.website_url %>" class="btn btn-primary"> Check Them Out!</a></p>
                        </div>
                    </div>
                </div>
                
            <% }); %>
        <% } else if (typeof error !=='undefined' && error) { %>
            <p><%= error %></p>
        <% } else { %>
            <p>No results to display</p>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>